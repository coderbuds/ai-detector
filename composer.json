{
    "name": "coderbuds/ai-detector",
    "description": "Multi-strategy AI code detection for pull requests",
    "type": "library",
    "license": "MIT",
    "keywords": ["ai", "detection", "pull-request", "github", "copilot", "claude-code"],
    "authors": [
        {
            "name": "CoderBuds",
            "email": "hello@coderbuds.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "spatie/laravel-data": "^4.0",
        "symfony/yaml": "^6.0 || ^7.0"
    },
    "require-dev": {
        "pestphp/pest": "^2.0 || ^3.0",
        "phpstan/phpstan": "^1.10",
        "laravel/pint": "^1.0",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "CoderBuds\\AiDetector\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CoderBuds\\AiDetector\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "lint": "vendor/bin/pint",
        "analyse": "vendor/bin/phpstan analyse"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
